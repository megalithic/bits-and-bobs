# lexically sort filenames
--sort-files

--color
--follow
--group
--context=3

# Use the less pager
# --pager=less -r
--pager=less -iqRS

--type-add=ruby=.haml,.rake,.rsel,.builder
--type-add=html=.html.erb,.html.haml,.hbs
--type-add=vim=vimrc
--type-add=js=json
--type-set=cucumber=feature
--type-add=css=.sass,.less,.scss
--type-add=markdown=.md,.mdown,.markdown

# add types ack doesn't know about
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc

--type-set=coffee=.coffee
--type-set=haml=.haml
--type-set=sass=.sass
--type-set=minifiedjs=.min.js
--nocss
--nominifiedjs

