global !p
from snippet_helpers import *
endglobal

snippet d "display" b
display: $0
endsnippet

# Border
snippet b "border" b
border: $0
endsnippet

snippet bt "border-top" b
border-top: $0
endsnippet

snippet br "border-right" b
border-right: $0
endsnippet

snippet bb "border-bottom" b
border-bottom: $0
endsnippet

snippet bl "border-left" b
